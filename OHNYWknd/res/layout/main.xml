<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  
    android:id="@+id/textview0"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/hello"
    />
    
<TableLayout    
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<TableRow android:gravity="center_horizontal">
	<ImageView
android:id="@+id/Button01" android:scaleType="fitXY" android:layout_width="110dip"
android:layout_height="110dip"
android:background="@drawable/bronx"></ImageView>   
	<ImageView
android:id="@+id/Button02" android:scaleType="fitXY" android:layout_width="110dip"
android:layout_height="110dip"
android:background="@drawable/queens"></ImageView>
</TableRow>

<TableRow android:gravity="center_horizontal">
<TextView  android:gravity="center_horizontal"
    android:id="@+id/textlabel01"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="bronx"
    />
<TextView  android:gravity="center_horizontal"
    android:id="@+id/textlabel02"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="queens"
    /> 
</TableRow>


<TableRow android:gravity="center_horizontal">
	<ImageView android:scaleType="fitXY" android:layout_width="110dip"
android:layout_height="110dip"
android:id="@+id/Button03" 
android:background="@drawable/manhattan"></ImageView> 
	<ImageView android:scaleType="fitXY" android:layout_width="110dip"
android:layout_height="110dip"
android:id="@+id/Button04" 
android:background="@drawable/brooklyn"></ImageView>
</TableRow>

<TableRow android:gravity="center_horizontal">
<TextView  android:gravity="center_horizontal"
    android:id="@+id/textlabel03"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="manhattan"
    />
<TextView  android:gravity="center_horizontal"
    android:id="@+id/textlabel04"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="brooklyn"
    /> 
</TableRow>
<TableRow android:gravity="center_horizontal">
<ImageView android:scaleType="fitXY" android:layout_width="110dip"
android:layout_height="110dip"
android:id="@+id/Button05" 
android:background="@drawable/staten_island"></ImageView>
<ImageView android:scaleType="fitXY" android:layout_width="110dip"
android:layout_height="110dip"
android:id="@+id/Button06" ></ImageView>
</TableRow>
<TableRow android:gravity="center_horizontal">
<TextView android:gravity="center_horizontal"
    android:id="@+id/textlabel05"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="staten island"
    />
<TextView android:gravity="center_horizontal"
    android:id="@+id/textlabel06"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="donate"
    /> 
</TableRow>
</TableLayout>
</LinearLayout>
