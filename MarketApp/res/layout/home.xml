<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    >
    
    <Button
android:id="@+id/candleButton"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_x="30px"
android:layout_y="300px"
 android:background="@drawable/candle"
>
</Button>
<Button
android:id="@+id/watchListButton"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_x="12dp"
android:layout_y="50dp"
 android:background="@drawable/watchlist"
>
</Button>

<TextView
android:id="@+id/watchListText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Watch List"
android:textColor="#ff000000"
android:layout_x="50dp"
android:layout_y="185dp"
>
</TextView>
<Button
android:id="@+id/portfolioButton"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_x="166dp"
android:layout_y="50dp"
 android:background="@drawable/portfolio"
>
</Button>
<TextView
android:id="@+id/portfolioText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Portfolio"
android:textColor="#ff000000"
android:layout_x="210dp"
android:layout_y="185dp"
>
</TextView>
<Button
android:id="@+id/pricingEngineButton"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_x="12dp"
android:layout_y="230dp"
 android:background="@drawable/price"
>
</Button>
<TextView
android:id="@+id/pricingEngineText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Company Detail"
android:textColor="#ff000000"
android:layout_x="35dp"
android:layout_y="360dp"
>
</TextView>
<Button
android:id="@+id/alertButton"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_x="166dp"
android:layout_y="230dp"
 android:background="@drawable/alert"
>
</Button>
<TextView
android:id="@+id/alertText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Alerts"
android:textColor="#ff000000"
android:layout_x="220dp"
android:layout_y="365dp"
>
</TextView>

</AbsoluteLayout>
